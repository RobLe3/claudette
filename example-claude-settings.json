{
  "// HINWEIS": "Dies ist eine Beispiel-Konfigurationsdatei für die Claude Code Integration mit Claudette",
  "// PFAD": "Diese Datei sollte unter ~/.claude/settings.json gespeichert werden",
  
  "enhancement_verification": {
    "enabled": true,
    "verification_on_startup": true,
    "full_verification_interval_hours": 24,
    "quick_check_interval_hours": 1,
    "_description": "Aktiviert die Verbesserungsverifikation für konsistente Performance"
  },

  "hooks": {
    "pre_session": [
      "python3 /Users/[USERNAME]/Documents/Python/claudette-dev/claudette/scripts/automation/claude_startup_hook.py"
    ],
    "user_prompt_submit": [
      "python3 /Users/[USERNAME]/.claude/hooks/anti_hallucination_prompt.py"
    ],
    "startup": [
      "python3 /Users/[USERNAME]/.claude/hooks/startup_verification.py"
    ],
    "_description": "Hooks für erweiterte Funktionalität und Anti-Halluzination"
  },

  "anti_hallucination": {
    "enabled": true,
    "verification_required": true,
    "confidence_levels_mandatory": true,
    "language_moderation": true,
    "component_verification": true,
    "measurement_commands_required": true,
    "_description": "Anti-Halluzination-System für verbesserte Genauigkeit"
  },

  "verification_settings": {
    "show_commands": true,
    "show_confidence_levels": true,
    "require_baseline_measurements": true,
    "prevent_overclaiming_language": true,
    "component_level_testing": true,
    "_description": "Verifikationseinstellungen für technische Genauigkeit"
  },

  "behavioral_modifications": {
    "pressure_relief_active": true,
    "honest_uncertainty_preferred": true,
    "accuracy_over_impressiveness": true,
    "mandatory_verification_checklist": true,
    "_description": "Verhaltensmodifikationen für verbesserte Antwortqualität"
  },

  "mcpServers": {
    "claudette": {
      "command": "node",
      "args": [
        "/Users/[USERNAME]/Documents/Python/claudette-dev/claudette/claudette-mcp-multiplexer.js"
      ],
      "description": "Claudette AI-System mit intelligentem Multiplexing und Load Balancing für optimale Performance",
      "capabilities": [
        "tools",
        "resources"
      ],
      "timeout": 120000,
      "env": {
        "NODE_ENV": "production",
        "MCP_CONFIG_PATH": "/Users/[USERNAME]/Documents/Python/claudette-dev/claudette/mcp-multiplexer-config.json",
        "CLAUDETTE_LOG_LEVEL": "info",
        "CLAUDETTE_MAX_RETRIES": "3"
      },
      "_technical_details": {
        "multiplexing": "2-6 parallel instances",
        "load_balancing": "Least-connections algorithm",
        "auto_scaling": "Dynamic scaling based on load",
        "fault_tolerance": "Automatic failover and recovery",
        "performance": "6-18x concurrent request capacity"
      }
    }
  },

  "logging": {
    "level": "info",
    "enableMcpLogging": true,
    "logRotation": true,
    "maxLogFiles": 10,
    "_description": "Logging-Konfiguration für Debugging und Monitoring"
  },

  "performance": {
    "enableMetrics": true,
    "metricsInterval": 30000,
    "enableProfiling": false,
    "_description": "Performance-Monitoring für System-Optimierung"
  },

  "// INSTALLATIONS-ANWEISUNGEN": {
    "schritt_1": "Kopiere diese Datei nach ~/.claude/settings.json",
    "schritt_2": "Ersetze [USERNAME] mit deinem tatsächlichen Benutzernamen",
    "schritt_3": "Stelle sicher, dass alle Pfade zu den Claudette-Dateien korrekt sind",
    "schritt_4": "Starte Claude Code neu, um die Konfiguration zu laden",
    "schritt_5": "Teste die Integration mit: claudette 'Hello World'"
  },

  "// PFAD-ANPASSUNGEN": {
    "claudette_hauptverzeichnis": "/Users/[USERNAME]/Documents/Python/claudette-dev/claudette/",
    "multiplexer_script": "claudette-mcp-multiplexer.js",
    "konfiguration": "mcp-multiplexer-config.json",
    "monitor_script": "mcp-multiplexer-monitor.js",
    "logs_verzeichnis": "logs/",
    "hooks_verzeichnis": "/Users/[USERNAME]/.claude/hooks/"
  },

  "// ERWEITERTE-OPTIONEN": {
    "multiplexing_config": {
      "minInstances": 2,
      "maxInstances": 6,
      "maxConcurrentRequests": 3,
      "requestTimeout": 90000,
      "healthCheckInterval": 30000,
      "scaleUpThreshold": 0.8,
      "scaleDownThreshold": 0.3
    },
    "backend_preferences": {
      "default": "auto",
      "fallback_order": ["claude", "openai", "qwen", "ollama"],
      "timeout_per_backend": 60000
    }
  },

  "// MONITORING-KOMMANDOS": {
    "status_check": "node mcp-multiplexer-monitor.js status",
    "health_check": "node mcp-multiplexer-monitor.js health",
    "load_test": "node mcp-multiplexer-monitor.js test 10",
    "full_diagnostics": "node mcp-multiplexer-monitor.js diagnostics",
    "view_logs": "node mcp-multiplexer-monitor.js logs 50"
  },

  "// FEHLERBEHEBUNG": {
    "problem_1": "MCP Server startet nicht",
    "lösung_1": "Prüfe Pfade und Berechtigungen mit 'node --check claudette-mcp-multiplexer.js'",
    "problem_2": "Timeout-Fehler",
    "lösung_2": "Erhöhe 'timeout' Wert oder prüfe Netzwerkverbindung",
    "problem_3": "Multiplexing funktioniert nicht",
    "lösung_3": "Führe Diagnose aus: 'node mcp-multiplexer-monitor.js diagnostics'"
  },

  "// VERSION-INFO": {
    "claudette_version": "1.0.4+multiplexing",
    "mcp_protocol": "2024-11-05",
    "multiplexing_version": "1.0.0",
    "optimizations": [
      "Timeout harmonization",
      "Circuit breaker integration", 
      "Intelligent retry logic",
      "Auto-scaling multiplexing",
      "Load balancing",
      "Fault tolerance"
    ]
  }
}